<Window x:Class="UserManagementApp.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add User" Height="400" Width="300">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="First Name:" Margin="0,0,0,10"/>
            <TextBox x:Name="firstNameTextBox" Margin="0,0,0,20"/>

            <TextBlock Text="Surname:" Margin="0,0,0,10"/>
            <TextBox x:Name="surnameTextBox" Margin="0,0,0,20"/>

            <TextBlock Text="Username:" Margin="0,0,0,10"/>
            <TextBox x:Name="usernameTextBox" Margin="0,0,0,20"/>

            <TextBlock Text="Password:" Margin="0,0,0,10"/>
            <PasswordBox x:Name="passwordBox" Margin="0,0,0,20"/>

            <TextBlock Text="Confirm Password:" Margin="0,0,0,10"/>
            <PasswordBox x:Name="confirmPasswordBox" Margin="0,0,0,20"/>

            <Button Content="Add User" Width="100" Click="AddUserButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
